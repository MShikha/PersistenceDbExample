<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <File>./logs/akka.log</File>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-5level] %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>